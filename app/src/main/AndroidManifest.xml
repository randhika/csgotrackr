<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.cstogo" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewMatchActivity"
            android:label="@string/title_activity_new_match"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.cstogo.MainActivity" />
        </activity>
        <activity
            android:name=".SmokesActivity"
            android:label="@string/title_activity_dust2_smokes"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.cstogo.MainActivity" />
        </activity>
        <activity
            android:name=".ViewImageActivity"
            android:theme="@style/Theme.AppCompat.Translucent"
            android:label=""
            android:parentActivityName=".SmokesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.cstogo.SmokesActivity" />
        </activity>
    </application>

</manifest>
