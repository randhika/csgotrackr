<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    card_view:contentPadding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/web_best_weapons_title"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/accent"
            android:id="@+id/steam_web_stats_webgun_best_weapons_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/web_wep_most_shots"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/material_blue_grey_900"
            android:id="@+id/textView"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/steam_web_stats_webgun_best_weapons_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accent"
            android:id="@+id/steam_web_stats_webgun_shots_name"
            android:layout_below="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/web_wep_most_hits"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/material_blue_grey_900"
            android:id="@+id/textView3"
            android:layout_below="@+id/steam_web_stats_webgun_shots_name"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accent"
            android:id="@+id/steam_web_stats_webgun_hits_name"
            android:layout_below="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/web_wep_most_kills"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/material_blue_grey_900"
            android:id="@+id/textView2"
            android:layout_below="@+id/steam_web_stats_webgun_hits_name"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accent"
            android:id="@+id/steam_web_stats_webgun_kills_name"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/steam_web_stats_webgun_hits_name"
            android:layout_alignStart="@+id/steam_web_stats_webgun_hits_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/web_wep_best_accuracy"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/material_blue_grey_900"
            android:id="@+id/textView5"
            android:layout_below="@+id/steam_web_stats_webgun_kills_name"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accent"
            android:id="@+id/steam_web_stats_webgun_accuracy_name"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/steam_web_stats_webgun_hits_name"
            android:layout_alignStart="@+id/steam_web_stats_webgun_hits_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:id="@+id/textView7"
            android:layout_above="@+id/textView3"
            android:layout_toRightOf="@+id/steam_web_stats_webgun_shots_name"
            android:layout_toEndOf="@+id/steam_web_stats_webgun_shots_name"
            android:textColor="@color/material_blue_grey_900"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:id="@+id/textView8"
            android:layout_above="@+id/textView2"
            android:layout_toRightOf="@+id/steam_web_stats_webgun_hits_name"
            android:layout_toEndOf="@+id/steam_web_stats_webgun_hits_name"
            android:textColor="@color/material_blue_grey_900"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:id="@+id/textView9"
            android:layout_above="@+id/textView5"
            android:layout_toRightOf="@+id/steam_web_stats_webgun_kills_name"
            android:layout_toEndOf="@+id/steam_web_stats_webgun_kills_name"
            android:textColor="@color/material_blue_grey_900"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:id="@+id/textView10"
            android:layout_alignBottom="@+id/steam_web_stats_webgun_accuracy_name"
            android:layout_toRightOf="@+id/steam_web_stats_webgun_accuracy_name"
            android:layout_toEndOf="@+id/steam_web_stats_webgun_accuracy_name"
            android:textColor="@color/material_blue_grey_900"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/steam_web_stats_webgun_shots_number"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:textColor="@color/material_blue_grey_900"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/steam_web_stats_webgun_hits_number"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8"
            android:textColor="@color/material_blue_grey_900"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/steam_web_stats_webgun_kills_number"
            android:layout_alignBottom="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:layout_toEndOf="@+id/textView9"
            android:textColor="@color/material_blue_grey_900"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/steam_web_stats_webgun_accuracy_number"
            android:layout_alignBottom="@+id/textView10"
            android:layout_toRightOf="@+id/textView10"
            android:layout_toEndOf="@+id/textView10"
            android:textColor="@color/material_blue_grey_900"
            android:fontFamily="sans-serif-light" />


    </RelativeLayout>



</android.support.v7.widget.CardView>