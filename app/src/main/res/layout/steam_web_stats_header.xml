<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="1dp"
    card_view:contentPadding="15dp"
    card_view:cardBackgroundColor="?cardBack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/steam_web_stats_header_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/web_stats_steam_avatar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/steam_web_stats_header_nickname"
            android:layout_toRightOf="@id/steam_web_stats_header_avatar"
            android:layout_toEndOf="@id/steam_web_stats_header_avatar"
            android:layout_alignTop="@id/steam_web_stats_header_avatar"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            tools:text="lorem"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:fontFamily="sans-serif-light"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/steam_web_stats_header_status"
            android:layout_alignLeft="@id/steam_web_stats_header_nickname"
            android:layout_alignStart="@id/steam_web_stats_header_nickname"
            android:layout_below="@id/steam_web_stats_header_nickname"
            android:layout_marginTop="5dp"
            tools:text="IPSUM"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:fontFamily="sans-serif-thin"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>