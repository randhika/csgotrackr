<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="150dp"
        android:layout_margin="1dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#559988"
            android:scaleType="centerCrop"
            android:id="@+id/square_thumb"
            android:contentDescription="@string/pic_of_smoke_thumb_desc" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#88000000"
            android:layout_alignParentBottom="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:textAllCaps="true"
            android:id="@+id/square_title" />

    </RelativeLayout>

</com.andexert.library.RippleView>