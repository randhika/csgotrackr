<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="8dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/best_maps_title"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/steam_web_stats_webmap_best_maps_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/accent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/web_map_best_win_percentage"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/material_blue_grey_900"
            android:id="@+id/steam_web_stats_webmap_highest_win_perc_name"
            android:layout_below="@+id/steam_web_stats_webmap_best_maps_title"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/steam_web_stats_webmap_highest_win_perc_number"
            android:textColor="@color/accent"
            android:layout_below="@+id/steam_web_stats_webmap_highest_win_perc_name"
            android:layout_alignLeft="@+id/steam_web_stats_webmap_highest_win_perc_name"
            android:layout_alignStart="@+id/steam_web_stats_webmap_highest_win_perc_name"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/web_map_most_wins"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/material_blue_grey_900"
            android:id="@+id/steam_web_stats_webmap_highest_wins_name"
            android:layout_below="@+id/steam_web_stats_webmap_highest_win_perc_number"
            android:layout_alignLeft="@+id/steam_web_stats_webmap_highest_win_perc_name"
            android:layout_alignStart="@+id/steam_web_stats_webmap_highest_win_perc_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/steam_web_stats_webmap_highest_wins_number"
            android:textColor="@color/accent"
            android:layout_below="@+id/steam_web_stats_webmap_highest_wins_name"
            android:layout_alignLeft="@+id/steam_web_stats_webmap_highest_win_perc_number"
            android:layout_alignStart="@+id/steam_web_stats_webmap_highest_win_perc_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/web_map_most_rounds"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/material_blue_grey_900"
            android:id="@+id/steam_web_stats_webmap_highest_rounds_name"
            android:layout_below="@+id/steam_web_stats_webmap_highest_wins_number"
            android:layout_alignLeft="@+id/steam_web_stats_webmap_highest_wins_name"
            android:layout_alignStart="@+id/steam_web_stats_webmap_highest_wins_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/steam_web_stats_webmap_highest_rounds_number"
            android:textColor="@color/accent"
            android:layout_below="@+id/steam_web_stats_webmap_highest_rounds_name"
            android:layout_alignLeft="@+id/steam_web_stats_webmap_highest_wins_number"
            android:layout_alignStart="@+id/steam_web_stats_webmap_highest_wins_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:id="@+id/steam_web_stats_webmap_textView4"
            android:layout_alignBottom="@+id/steam_web_stats_webmap_highest_win_perc_number"
            android:layout_toRightOf="@+id/steam_web_stats_webmap_highest_win_perc_number"
            android:layout_toEndOf="@+id/steam_web_stats_webmap_highest_win_perc_number"
            android:textColor="@color/material_blue_grey_900"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:id="@+id/steam_web_stats_webmap_textView6"
            android:layout_alignBottom="@+id/steam_web_stats_webmap_highest_wins_number"
            android:layout_toRightOf="@+id/steam_web_stats_webmap_highest_wins_number"
            android:layout_toEndOf="@+id/steam_web_stats_webmap_highest_wins_number"
            android:textColor="@color/material_blue_grey_900"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:id="@+id/steam_web_stats_webmap_textView11"
            android:layout_alignBottom="@+id/steam_web_stats_webmap_highest_rounds_number"
            android:layout_toRightOf="@+id/steam_web_stats_webmap_highest_rounds_number"
            android:layout_toEndOf="@+id/steam_web_stats_webmap_highest_rounds_number"
            android:textColor="@color/material_blue_grey_900"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/steam_web_stats_webmap_highest_win_perc_map"
            android:layout_alignBottom="@+id/steam_web_stats_webmap_textView4"
            android:layout_toRightOf="@+id/steam_web_stats_webmap_textView4"
            android:layout_toEndOf="@+id/steam_web_stats_webmap_textView4"
            android:textColor="@color/material_blue_grey_900"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/steam_web_stats_webmap_highest_wins_map"
            android:layout_alignBottom="@+id/steam_web_stats_webmap_textView6"
            android:layout_toRightOf="@+id/steam_web_stats_webmap_textView6"
            android:layout_toEndOf="@+id/steam_web_stats_webmap_textView6"
            android:textColor="@color/material_blue_grey_900"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/steam_web_stats_webmap_highest_rounds_map"
            android:layout_alignBottom="@+id/steam_web_stats_webmap_textView11"
            android:layout_toRightOf="@+id/steam_web_stats_webmap_textView11"
            android:layout_toEndOf="@+id/steam_web_stats_webmap_textView11"
            android:textColor="@color/material_blue_grey_900"
            android:fontFamily="sans-serif-light" />


    </RelativeLayout>

</android.support.v7.widget.CardView>