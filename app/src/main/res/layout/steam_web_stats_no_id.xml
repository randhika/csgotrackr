<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="0dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/steam_web_stats_no_id_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This screen shows current stats from your steam profile. Unfortunately, at this point, it seems your steam ID is not properly set up in settings. Please visit settings page and input your ID (connection for verification and downloading stats is required.)Instructions on how to find/set up steam ID can be found on picture below."
            />

        <ImageView
            android:id="@+id/steam_web_stats_no_id_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/steam_web_stats_no_id_image_description" />

    </LinearLayout>

</android.support.v7.widget.CardView>