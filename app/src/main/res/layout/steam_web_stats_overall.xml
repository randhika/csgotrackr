<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    card_view:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/steam_web_stats_overall_kd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-light"
                android:text="@string/kd_ratio_number"
                android:textColor="?accentColor"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/steam_web_stats_overall_kd_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/steam_web_stats_overall_kd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/kill_slash_death"
                android:textColor="@color/material_blue_grey_900" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">


            <TextView
                android:id="@+id/steam_web_stats_overall_total_kills_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/total_kills"
                android:textColor="@color/material_blue_grey_900" />

            <TextView
                android:id="@+id/steam_web_stats_overall_total_kills_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/steam_web_stats_overall_total_kills_title"
                android:textColor="?accentColor" />

            <TextView
                android:id="@+id/steam_web_stats_overall_win_percent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/steam_web_stats_overall_total_kills_title"
                android:layout_alignStart="@+id/steam_web_stats_overall_total_kills_title"
                android:layout_below="@+id/steam_web_stats_overall_total_kills_number"
                android:fontFamily="sans-serif-light"
                android:text="@string/win_percentage"
                android:textColor="@color/material_blue_grey_900" />

            <TextView
                android:id="@+id/steam_web_stats_overall_win_percent_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/steam_web_stats_overall_total_kills_number"
                android:layout_alignRight="@+id/steam_web_stats_overall_total_kills_number"
                android:layout_below="@+id/steam_web_stats_overall_win_percent_title"
                android:textColor="?accentColor" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">


            <TextView
                android:id="@+id/steam_web_stats_overall_headshot_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/headshot_percentage"
                android:textColor="@color/material_blue_grey_900" />

            <TextView
                android:id="@+id/steam_web_stats_overall_headshot_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/steam_web_stats_overall_headshot_title"
                android:textColor="?accentColor" />

            <TextView
                android:id="@+id/steam_web_stats_overall_accuracy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/steam_web_stats_overall_headshot_title"
                android:layout_alignStart="@+id/steam_web_stats_overall_headshot_number"
                android:layout_below="@+id/steam_web_stats_overall_headshot_number"
                android:fontFamily="sans-serif-light"
                android:text="@string/accuracy"
                android:textColor="@color/material_blue_grey_900" />

            <TextView
                android:id="@+id/steam_web_stats_overall_accuracy_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/steam_web_stats_overall_accuracy_title"
                android:layout_alignRight="@+id/steam_web_stats_overall_headshot_number"
                android:layout_below="@+id/steam_web_stats_overall_accuracy_title"
                android:textColor="?accentColor" />
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>