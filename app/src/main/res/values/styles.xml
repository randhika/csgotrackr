<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <!-- You can also set colorControlNormal, colorControlActivated
            colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="android:textColorPrimary">#212121</item>
        <item name="cardBack">#FAFAFA</item>
    </style>

    <style name="blue_pink" parent="AppTheme">
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#2196F3</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#1976D2</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">#FF4081</item>
        <!-- Accent color - has to be duplicated because i cant use the one above as reference. ¯\_(ツ)_/¯ -->
        <item name="accentColor">#FF4081</item>
        <!-- FAB COLORS -->
        <item name="fab_colorPressed">#f50057</item>
        <!-- fab color normal is just accentColor from above -->
        <item name="fab_colorRipple">#ff80ab</item>
        <item name="fab_colorDisabled">#676D68</item>
    </style>

    <style name="teal_orange" parent="AppTheme">
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#009688</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#00796B</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">#FF9800</item>
        <!-- Accent color - has to be duplicated because i cant use the one above as reference. ¯\_(ツ)_/¯ -->
        <item name="accentColor">#FF9800</item>
        <!-- FAB COLORS -->
        <item name="fab_colorPressed">#CE7A00</item>
        <!-- fab color normal is just accentColor from above -->
        <item name="fab_colorRipple">#FFDA33</item>
        <item name="fab_colorDisabled">#676D68</item>
    </style>

    <style name="indigo_red" parent="AppTheme">
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#3F51B5</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#303F9F</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">#FF5252</item>
        <!-- Accent color - has to be duplicated because i cant use the one above as reference. ¯\_(ツ)_/¯ -->
        <item name="accentColor">#FF5252</item>
        <!-- FAB COLORS -->
        <item name="fab_colorPressed">#D64747</item>
        <!-- fab color normal is just accentColor from above -->
        <item name="fab_colorRipple">#FF944C</item>
        <item name="fab_colorDisabled">#676D68</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="MenuItemRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
    </style>

    <style name="DarkAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#212121</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#000000</item>
        <item name="cardBack">#424242</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">#6B6B6B</item>
        <item name="accentColor">#6B6B6B</item>
        <!-- You can also set colorControlNormal, colorControlActivated
            colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="android:textColorPrimary">#878787</item>
        <!-- FAB COLORS -->
        <item name="fab_colorPressed">#000</item>
        <item name="fab_colorRipple">#556B6B6B</item>
        <item name="fab_colorDisabled">#000</item>
    </style>
    <!-- Progress colors for line spinner-->
    <style name="ColorsLinearProgressDrawableStyle" parent="Material.Drawable.LinearProgress">
        <item name="lpd_strokeColors">@array/progress_colors</item>
        <item name="lpd_strokeSecondaryColor">#00000000</item>
    </style>

</resources>
